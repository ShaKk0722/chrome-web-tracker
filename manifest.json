{   
    "manifest_version": 3,
    "name": "LearnEnglish Tracker",
    "description": "Track search queries, page URLs, and dwell time with user consent.",
    "icons": {
        "16": "/images/icon.png"
    },
    "version": "1.0.0",
    "background": {
        "service_worker": "service_worker.js",
        "type": "module"
    },
    "action": { 
        "default_popup": "index.html"
    },

    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ]

}